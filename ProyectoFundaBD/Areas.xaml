        <Button x:Name="btnareas" HorizontalAlignment="Left" Margin="74,247,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="43" Width="128" Click="btnareas_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="Imagenes/anadir.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Agregar Area" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnfinanzas" HorizontalAlignment="Left" Margin="432,248,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="44" Width="143">
