                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="dbproveedores" AutoGenerateColumns="False" Margin="798,362,24,0"
          Background="#FFF8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"
          RowBackground="Transparent" AlternatingRowBackground="#F5F5F5"
          FontFamily="Segoe UI" FontSize="12" HeadersVisibility="All"
          GridLinesVisibility="None" CanUserAddRows="False"
          HorizontalGridLinesBrush="Transparent" VerticalGridLinesBrush="Transparent"
