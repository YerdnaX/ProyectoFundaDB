        <Button x:Name="btnmodificar" HorizontalAlignment="Left" Margin="221,248,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="43" Width="131" Click="btnmodificar_Click">
