        Title="Areas" Height="600" Width="1150"
        Closing="Window_Closing"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0003F1" Offset="0.424"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Areas del Hogar" HorizontalAlignment="Left" Margin="128,90,0,0" VerticalAlignment="Top" Width="200" FontFamily="Cooper Black" FontSize="22" FontWeight="Bold" Foreground="White" Height="40"/>
        <Label Content="Proveedores" HorizontalAlignment="Left" Margin="889,92,0,0" VerticalAlignment="Top" Width="160" FontFamily="Cooper Black" FontSize="22" FontWeight="Bold" Foreground="White" Height="40"/>
        <Label Content="Categorias Finanzas" HorizontalAlignment="Left" Margin="470,90,0,0" VerticalAlignment="Top" Width="234" FontFamily="Cooper Black" FontSize="22" FontWeight="Bold" Foreground="White" Height="40"/>
        <Label Content="Informacion General del Hogar" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="768" FontFamily="Cooper Black" FontSize="48" FontWeight="Bold" Foreground="White" Height="66"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="82,139,0,0" VerticalAlignment="Top" Width="120" FontFamily="Cooper Black" FontSize="22" FontWeight="Bold" Foreground="White" Height="40"/>
        <Label Content="Detalle:" HorizontalAlignment="Left" Margin="82,194,0,0" VerticalAlignment="Top" Width="120" FontFamily="Cooper Black" FontSize="22" FontWeight="Bold" Foreground="White" Height="40"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="468,139,0,0" VerticalAlignment="Top" Width="120" FontFamily="Cooper Black" FontSize="22" FontWeight="Bold" Foreground="White" Height="40"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="841,141,0,0" VerticalAlignment="Top" Width="118" FontFamily="Cooper Black" FontSize="22" FontWeight="Bold" Foreground="White" Height="40"/>
        <Label Content="Tipo:" HorizontalAlignment="Left" Margin="468,196,0,0" VerticalAlignment="Top" Width="84" FontFamily="Cooper Black" FontSize="22" FontWeight="Bold" Foreground="White" Height="40"/>
        <Label Content="Tipo:" HorizontalAlignment="Left" Margin="847,196,0,0" VerticalAlignment="Top" Width="81" FontFamily="Cooper Black" FontSize="22" FontWeight="Bold" Foreground="White" Height="40"/>
        <TextBox x:Name="txtnombreares" HorizontalAlignment="Left" Margin="208,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtnombrefinanzas" HorizontalAlignment="Left" Margin="588,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtnombreproveedor" HorizontalAlignment="Left" Margin="959,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtdetalle" HorizontalAlignment="Left" Margin="208,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="boxfinanzas" HorizontalAlignment="Left" Margin="588,205,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="INGRESO"/>
            <ComboBoxItem Content="EGRESO"/>
        </ComboBox>
        <ComboBox x:Name="boxproveedores" HorizontalAlignment="Left" Margin="959,205,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="SERVICIO"/>
            <ComboBoxItem Content="COMERCIO"/>
            <ComboBoxItem Content="SALUD"/>
            <ComboBoxItem Content="EDUCACION"/>
        </ComboBox>
        <DataGrid x:Name="dbares" AutoGenerateColumns="False" Margin="44,362,779,0"
          Background="#FFF8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"
          RowBackground="Transparent" AlternatingRowBackground="#F5F5F5"
          FontFamily="Segoe UI" FontSize="12" HeadersVisibility="All"
          GridLinesVisibility="None" CanUserAddRows="False"
          HorizontalGridLinesBrush="Transparent" VerticalGridLinesBrush="Transparent"
          RowHeight="35" SelectionUnit="FullRow" Height="168" VerticalAlignment="Top" IsReadOnly="True">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF0003F1"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#E0E0E0"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="NOMBRE" Binding="{Binding nombre}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="DETALLE" Binding="{Binding detalle}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="dbfinanzas" AutoGenerateColumns="False" Margin="411,362,411,0"
