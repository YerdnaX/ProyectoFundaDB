<Window x:Class="ProyectoFundaBD.Finanzas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFundaBD"
        mc:Ignorable="d"
        Title="Finanzas" Height="550" Width="800"
        Closing="Window_Closing"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0003F1" Offset="0.312"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Facturas" HorizontalAlignment="Center" VerticalAlignment="Top" Width="232" FontFamily="Cooper Black" FontSize="48" FontWeight="Bold" Foreground="White" Height="68"/>
        <Label Content="Proveedor:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" FontFamily="Cooper Black" FontSize="20" FontWeight="Bold" Foreground="White" Height="40" Margin="65,82,0,0"/>
        <Label Content="Monto:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" FontFamily="Cooper Black" FontSize="20" FontWeight="Bold" Foreground="White" Height="40" Margin="65,127,0,0"/>
        <Label Content="Categoria:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" FontFamily="Cooper Black" FontSize="20" FontWeight="Bold" Foreground="White" Height="40" Margin="65,172,0,0"/>
        <Label Content="Emision:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="162" FontFamily="Cooper Black" FontSize="20" FontWeight="Bold" Foreground="White" Height="40" Margin="65,217,0,0"/>
        <Label Content="Vencimiento:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="213" FontFamily="Cooper Black" FontSize="20" FontWeight="Bold" Foreground="White" Height="40" Margin="383,87,0,0"/>
        <Label Content="Estado:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="106" FontFamily="Cooper Black" FontSize="20" FontWeight="Bold" Foreground="White" Height="40" Margin="383,132,0,0"/>
        <ComboBox x:Name="boxproveedor" 
            HorizontalAlignment="Left" 
            Margin="205,86,0,0" 
            VerticalAlignment="Top" 
            Width="143" 
            FontFamily="Arial Narrow" 
            FontSize="18"  
            ItemsSource="{Binding Proveedores}"
            DisplayMemberPath="Nombre_Empresa"
            SelectedValuePath="ID_Proveedor" Height="27">
        </ComboBox>
        <ComboBox x:Name="boxcategoria" 
            HorizontalAlignment="Left" 
            Margin="205,178,0,0" 
            VerticalAlignment="Top" 
            Width="143" 
            FontFamily="Arial Narrow" 
            FontSize="18"  
            ItemsSource="{Binding Categorias_Finanzas}"
            DisplayMemberPath="Nombre_categoria"
            SelectedValuePath="ID_categoria" Height="28">
        </ComboBox>
        <ComboBox x:Name="boxestado" HorizontalAlignment="Left" Margin="536,138,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="PENDIENTE"/>
            <ComboBoxItem Content="PAGADA"/>
            <ComboBoxItem Content="VENCIDA"/>
        </ComboBox>
        <DatePicker x:Name="fechaemision" HorizontalAlignment="Left" Margin="205,225,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="fechavencimiento" HorizontalAlignment="Left" Margin="536,95,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtmonto" HorizontalAlignment="Left" Margin="205,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DataGrid x:Name="dbfacturasvencer" AutoGenerateColumns="False" Margin="28,337,380,22"
          IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
          CanUserReorderColumns="False" CanUserResizeColumns="True"
          CanUserResizeRows="False" CanUserSortColumns="True"
          SelectionMode="Single" SelectionUnit="FullRow"
          Background="#FFF8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"
          RowBackground="Transparent" AlternatingRowBackground="#F5F5F5"
          FontFamily="Segoe UI" FontSize="12" HeadersVisibility="All"
          GridLinesVisibility="None" RowHeight="35" SelectionChanged="dbfacturasvencer_SelectionChanged">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF0003F1"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,5"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="PROVEEDOR" Binding="{Binding Proveedor}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="MONTO" Binding="{Binding monto}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="VENC." Binding="{Binding fecha_venc}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="CATEG." Binding="{Binding Categoria}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="DIAS" Binding="{Binding [Dias para vencer]}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Estado" Binding="{Binding [Estado Pago]}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnagregar" HorizontalAlignment="Left" Margin="490,178,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="140" Click="btnagregar_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/anadir.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Agregar Facturas" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnmodificar" HorizontalAlignment="Left" Margin="420,228,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="140" Click="btnmodificar_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/editar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Modificar Facturas" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnborrar" HorizontalAlignment="Left" Margin="592,225,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="140" Click="btnborrar_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/borrar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Borrar Facturas" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <DataGrid x:Name="dbfacturaspagar" AutoGenerateColumns="False" Margin="440,337,24,22"
            IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
            CanUserReorderColumns="False" CanUserResizeColumns="True"
            CanUserResizeRows="False" CanUserSortColumns="True"
            SelectionMode="Single" SelectionUnit="FullRow"
            Background="#FFF8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"
            RowBackground="Transparent" AlternatingRowBackground="#F5F5F5"
            FontFamily="Segoe UI" FontSize="12" HeadersVisibility="All"
            GridLinesVisibility="None" RowHeight="35">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#FF0003F1"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,5"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="CANT. FACTURAS" Binding="{Binding [Cantidad de facturas]}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="MONTO TOTAL PENDIENTE" Binding="{Binding [Monto total pendiente]}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Facturas Vencidad/Pendientes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="288" FontFamily="Cooper Black" FontSize="18" FontWeight="Bold" Foreground="White" Height="40" Margin="80,297,0,0"/>
        <Label Content="Total de Facturas por pagar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="264" FontFamily="Cooper Black" FontSize="18" FontWeight="Bold" Foreground="White" Height="40" Margin="476,297,0,0"/>
    </Grid>
</Window>
