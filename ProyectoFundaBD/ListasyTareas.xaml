<Window x:Class="ProyectoFundaBD.ListasyTareas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFundaBD"
        mc:Ignorable="d"
        Title="Listas y Tareas" Height="745" Width="1410"
        Closing="Window_Closing"
        ResizeMode="CanMinimize">
    <Grid x:Name="area" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0003F1" Offset="0.451"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Listas Hogar" HorizontalAlignment="Left" Margin="174,10,0,0" VerticalAlignment="Top" Width="328" FontFamily="Cooper Black" FontSize="48" FontWeight="Bold" Foreground="White" Height="65"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="178,99,0,0" VerticalAlignment="Top" Width="120" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Tipo:" HorizontalAlignment="Left" Margin="178,153,0,0" VerticalAlignment="Top" Width="120" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Area:" HorizontalAlignment="Left" Margin="178,211,0,0" VerticalAlignment="Top" Width="120" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Creado por:" HorizontalAlignment="Left" Margin="178,270,0,0" VerticalAlignment="Top" Width="159" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Fecha:" HorizontalAlignment="Left" Margin="178,331,0,0" VerticalAlignment="Top" Width="159" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Tareas Hogar" HorizontalAlignment="Left" Margin="890,10,0,0" VerticalAlignment="Top" Width="350" FontFamily="Cooper Black" FontSize="48" FontWeight="Bold" Foreground="White" Height="65"/>
        <Label Content="Lista:" HorizontalAlignment="Left" Margin="759,108,0,0" VerticalAlignment="Top" Width="98" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Titulo:" HorizontalAlignment="Left" Margin="759,162,0,0" VerticalAlignment="Top" Width="98" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Descripcion:" HorizontalAlignment="Left" Margin="759,220,0,0" VerticalAlignment="Top" Width="176" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Prioridad:" HorizontalAlignment="Left" Margin="759,278,0,0" VerticalAlignment="Top" Width="159" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Estado:" HorizontalAlignment="Left" Margin="1069,108,0,0" VerticalAlignment="Top" Width="159" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content=" Creacion:" HorizontalAlignment="Left" Margin="1062,162,0,0" VerticalAlignment="Top" Width="139" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Limite:" HorizontalAlignment="Left" Margin="1069,220,0,0" VerticalAlignment="Top" Width="139" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Repeticion:" HorizontalAlignment="Left" Margin="1069,278,0,0" VerticalAlignment="Top" Width="166" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <Label Content="Area:" HorizontalAlignment="Left" Margin="772,334,0,0" VerticalAlignment="Top" Width="159" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White" Height="38"/>
        <TextBox x:Name="txtnombre" HorizontalAlignment="Left" Margin="303,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18"/>
        <ComboBox x:Name="boxtipo" HorizontalAlignment="Left" Margin="303,164,0,0" VerticalAlignment="Top" Width="120" Height="22">
            <ComboBoxItem Content="TAREAS"/>
            <ComboBoxItem Content="COMPRAS"/>
            <ComboBoxItem Content="DESEOS"/>
        </ComboBox>
        <ComboBox x:Name="boxarea" 
          HorizontalAlignment="Left" 
          Margin="305,218,0,0" 
          VerticalAlignment="Top" 
          Width="143" 
          FontFamily="Arial Narrow" 
          FontSize="18"  
          ItemsSource="{Binding Areas}"
          DisplayMemberPath="Nombre_Area"
          SelectedValuePath="ID_Area" Height="27">
        </ComboBox>
        <ComboBox x:Name="boxmiembro" 
          HorizontalAlignment="Left" 
          Margin="342,275,0,0" 
          VerticalAlignment="Top" 
          Width="143" 
          FontFamily="Arial Narrow" 
          FontSize="18"  
          ItemsSource="{Binding Miembros}"
          DisplayMemberPath="Nombre"
          SelectedValuePath="ID_Miembros" Height="27">
        </ComboBox>
        <DatePicker x:Name="fecha" HorizontalAlignment="Left" Margin="303,338,0,0" VerticalAlignment="Top" Height="24" Width="145"/>
        <ComboBox x:Name="boxlista" 
          HorizontalAlignment="Left" 
          Margin="847,116,0,0" 
          VerticalAlignment="Top" 
          Width="143" 
          FontFamily="Arial Narrow" 
          FontSize="18"  
          ItemsSource="{Binding Listas}"
          DisplayMemberPath="Nombre_Lista"
          SelectedValuePath="ID_Listas" Height="27">
        </ComboBox>
        <TextBox x:Name="txttitulo" HorizontalAlignment="Left" Margin="857,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18"/>
        <TextBox x:Name="txtdescrip" HorizontalAlignment="Left" Margin="930,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18"/>
        <ComboBox x:Name="boxprioridad" HorizontalAlignment="Left" Margin="907,284,0,0" VerticalAlignment="Top" Width="120" Height="22">
            <ComboBoxItem Content="BAJA"/>
            <ComboBoxItem Content="MEDIA"/>
            <ComboBoxItem Content="ALTA"/>
        </ComboBox>
        <ComboBox x:Name="boxarea2" 
          HorizontalAlignment="Left" 
          Margin="884,340,0,0" 
          VerticalAlignment="Top" 
          Width="143" 
          FontFamily="Arial Narrow" 
          FontSize="18"  
          ItemsSource="{Binding Areas}"
          DisplayMemberPath="Nombre_Area"
          SelectedValuePath="ID_Area" Height="26">
        </ComboBox>
        <ComboBox x:Name="boxestado" HorizontalAlignment="Left" Margin="1180,116,0,0" VerticalAlignment="Top" Width="120" Height="22">
            <ComboBoxItem Content="PENDIENTE"/>
            <ComboBoxItem Content="EN PROCESO"/>
            <ComboBoxItem Content="HECHA"/>
        </ComboBox>
        <ComboBox x:Name="boxrepeticion" HorizontalAlignment="Left" Margin="1223,284,0,0" VerticalAlignment="Top" Width="120" Height="22">
            <ComboBoxItem Content="NINGUNA"/>
            <ComboBoxItem Content="DIARIA"/>
            <ComboBoxItem Content="SEMANAL"/>
            <ComboBoxItem Content="MENSUAL"/>
        </ComboBox>
        <DatePicker x:Name="fechacreacion" HorizontalAlignment="Left" Margin="1206,168,0,0" VerticalAlignment="Top" Height="24" Width="117"/>
        <DatePicker x:Name="fechalimite" HorizontalAlignment="Left" Margin="1206,232,0,0" VerticalAlignment="Top" Height="24" Width="117"/>
        <DataGrid x:Name="dblistas" AutoGenerateColumns="False" Margin="60,467,781,33"
          IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
          CanUserReorderColumns="False" CanUserResizeColumns="True"
          CanUserResizeRows="False" CanUserSortColumns="True"
          SelectionMode="Single" SelectionUnit="FullRow"
          Background="#FFF8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"
          RowBackground="Transparent" AlternatingRowBackground="#F5F5F5"
          FontFamily="Segoe UI" FontSize="12" HeadersVisibility="All"
          GridLinesVisibility="None" RowHeight="35" SelectionChanged="dblistas_SelectionChanged">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF0003F1"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,5"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="NOMBRE" Binding="{Binding nombre}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="TIPO" Binding="{Binding tipo}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="ID TAREA" Binding="{Binding id_area}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="CREADO POR" Binding="{Binding creada_por}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="FECHA" Binding="{Binding fecha_creada}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="dbtareas" AutoGenerateColumns="False" Margin="759,467,43,33"
          IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
          CanUserReorderColumns="False" CanUserResizeColumns="True"
          CanUserResizeRows="False" CanUserSortColumns="True"
          SelectionMode="Single" SelectionUnit="FullRow"
          Background="#FFF8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"
          RowBackground="Transparent" AlternatingRowBackground="#F5F5F5"
          FontFamily="Segoe UI" FontSize="12" HeadersVisibility="All"
          GridLinesVisibility="None" RowHeight="35" SelectionChanged="dbtareas_SelectionChanged">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF0003F1"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,5"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID TAREAS" Binding="{Binding id_lista}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="TITULO" Binding="{Binding titulo}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="DESCRIPCION" Binding="{Binding descripcion}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="PRIORIDAD" Binding="{Binding prioridad}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="ESTADO" Binding="{Binding estado}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="CREACION" Binding="{Binding fecha_creacion}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="LIMITE" Binding="{Binding fecha_limite}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="REPETICION" Binding="{Binding repeticion}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="ID AREA" Binding="{Binding id_area}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnagregarlista" HorizontalAlignment="Left" Margin="98,399,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="140" Click="btnagregarlista_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/anadir.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Agregar Lista" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnmodificarlista" HorizontalAlignment="Left" Margin="268,399,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="140" Click="btnmodificarlista_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/editar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Modificar Lista" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btneliminarlista" HorizontalAlignment="Left" Margin="447,399,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="140" Click="btneliminarlista_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/borrar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Eliminar Lista" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnagregartarea" HorizontalAlignment="Left" Margin="795,399,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="140" Click="btnagregartarea_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/anadir.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Agregar Tarea" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnmodificartarea" HorizontalAlignment="Left" Margin="995,399,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="140" Click="btnmodificartarea_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/editar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Modificar Tarea" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btneliminartarea" HorizontalAlignment="Left" Margin="1194,399,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="140" Click="btneliminartarea_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/borrar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Eliminar Tarea" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
