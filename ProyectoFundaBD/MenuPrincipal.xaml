<Window x:Class="ProyectoFundaBD.MenuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFundaBD"
        mc:Ignorable="d"
        Title="Menu Principal" Height="650" Width="1100"
        Closing="Window_Closing"
        ResizeMode="CanMinimize">
    <Grid Background="#FF0003F1">
        <!-- Fondo degradado -->

        <!-- Titulo -->
        <Label Content="Menu Principal"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           Margin="0,25,0,0"
           FontFamily="Cooper Black"
           FontSize="48"
           FontWeight="Bold"
           Foreground="White"/>

        <TextBlock x:Name="txtUsuarioInfo" 
           HorizontalAlignment="Right" 
           VerticalAlignment="Top"
           Margin="0,10,10,0"
           FontWeight="Bold"
           FontSize="12"/>

        <!-- Panel de botones SUPERIOR (Areas y Culti_Masco_Vehi) -->
        <WrapPanel HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Orientation="Horizontal"
               Margin="0,100,0,0">

            <!-- Areas -->
            <Button x:Name="btngeneral" Click="btngeneral_Click"
                Width="130" Height="130" Margin="12"
                Background="Transparent" BorderThickness="0" Cursor="Hand">
                <StackPanel>
                    <Ellipse Width="90" Height="90">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="IconosMenu/InformacionGeneral.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="Areas" Foreground="White" FontFamily="Arial Black" FontSize="14" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>
            </Button>

            <!-- Cultivos, Mascotas y Vehiculo (boton agrupado) -->
            <Button x:Name="btncultimasvehi" Click="btncultimasvehi_Click"
                Width="130" Height="130" Margin="12"
                Background="Transparent" BorderThickness="0" Cursor="Hand">
                <StackPanel>
                    <Ellipse Width="90" Height="90">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="IconosMenu/Culti_Vehi_Masco.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="Culti / Masco / Vehi" Foreground="White" FontFamily="Arial Black" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0" TextWrapping="Wrap" Width="110"/>
                </StackPanel>
            </Button>

        </WrapPanel>

        <!-- Panel de botones INFERIOR organizado en 2 filas de 5 -->
        <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,250,0,0">

            <!-- Primera fila de 5 botones -->
            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,10">
                <!-- Listas y Tareas -->
                <Button x:Name="btnlistaytareas" Click="btnfinanzas_Click"
                    Width="130" Height="130" Margin="12"
                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel>
                        <Ellipse Width="90" Height="90">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="IconosMenu/ListasYTareas.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Listas y Tareas" Foreground="White" FontFamily="Arial Black" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0" TextWrapping="Wrap" Width="110"/>
                    </StackPanel>
                </Button>

                <!-- Asignacion de Tareas -->
                <Button x:Name="btnasignacion" Click="btnasignacion_Click"
                    Width="130" Height="130" Margin="12"
                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel>
                        <Ellipse Width="90" Height="90">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="IconosMenu/AsignacionTareas.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Asignacion" Foreground="White" FontFamily="Arial Black" FontSize="14" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Eventos -->
                <Button x:Name="btneventos" Click="btneventos_Click"
                    Width="130" Height="130" Margin="12"
                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel>
                        <Ellipse Width="90" Height="90">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="IconosMenu/Eventos.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Eventos" Foreground="White" FontFamily="Arial Black" FontSize="14" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Facturas -->
                <Button x:Name="btnfacturas" Click="btnfacturas_Click"
                    Width="130" Height="130" Margin="12"
                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel>
                        <Ellipse Width="90" Height="90">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="IconosMenu/Facturas.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Facturas" Foreground="White" FontFamily="Arial Black" FontSize="14" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Presupuesto -->
                <Button x:Name="btnpresupuesto" Click="btnpresupuesto_Click"
                    Width="130" Height="130" Margin="12"
                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel>
                        <Ellipse Width="90" Height="90">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="IconosMenu/Presupuesto.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Presupuesto" Foreground="White" FontFamily="Arial Black" FontSize="13" HorizontalAlignment="Center" Margin="0,8,0,0" TextWrapping="Wrap" Width="110"/>
                    </StackPanel>
                </Button>
            </WrapPanel>

            <!-- Segunda fila de 5 botones -->
            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,0">
                <!-- Salarios -->
                <Button x:Name="btnsalario" Click="btnsalario_Click"
                    Width="130" Height="130" Margin="12"
                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel>
                        <Ellipse Width="90" Height="90">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="IconosMenu/Salarios.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Salarios" Foreground="White" FontFamily="Arial Black" FontSize="14" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Movimientos -->
                <Button x:Name="btnmovimientos" Click="btnmovimientos_Click"
                    Width="130" Height="130" Margin="12"
                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel>
                        <Ellipse Width="90" Height="90">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="IconosMenu/Moviminetos.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Movimientos" Foreground="White" FontFamily="Arial Black" FontSize="13" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Cultivo (entrada individual) -->
                <Button x:Name="btncultivo" Click="btncultivo_Click"
                    Width="130" Height="130" Margin="12"
                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel>
                        <Ellipse Width="90" Height="90">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="IconosMenu/Cultivo.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Cultivo" Foreground="White" FontFamily="Arial Black" FontSize="14" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Mascotas -->
                <Button x:Name="btnmascotas" Click="btnmascotas_Click"
                    Width="130" Height="130" Margin="12"
                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel>
                        <Ellipse Width="90" Height="90">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="IconosMenu/Mascotas.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Mascotas" Foreground="White" FontFamily="Arial Black" FontSize="14" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Vehiculo -->
                <Button x:Name="btnvehiculo" Click="btnvehiculo_Click"
                    Width="130" Height="130" Margin="12"
                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel>
                        <Ellipse Width="90" Height="90">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="IconosMenu/Vehiculo.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Vehiculo" Foreground="White" FontFamily="Arial Black" FontSize="14" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btngastomensual" Click="btngastomensual_Click" Width="130" Height="130" Margin="12" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel>
                        <Ellipse Width="90" Height="90">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/IconosMenu/Gatos.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Gasto mensual" Foreground="White" FontFamily="Arial Black" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0" TextWrapping="Wrap" Width="110"/>
                    </StackPanel>
                </Button>
            </WrapPanel>

        </StackPanel>
    </Grid>
</Window>

