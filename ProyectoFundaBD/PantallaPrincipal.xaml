        <Button x:Name="btn1" HorizontalAlignment="Left" Margin="177,142,0,0" VerticalAlignment="Top" Height="88" Width="96">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Círculo del botón -->
                        <Ellipse x:Name="ellipse" Fill="{TemplateBinding Background}"/>
                        <!-- Contenido (imagen) -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
            <Image Height="43" Width="100"/>
