<Window x:Class="ProyectoFundaBD.Salarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFundaBD"
        mc:Ignorable="d"
        Title="Finanzas" Height="550" Width="800"
        Closing="Window_Closing"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0003F1" Offset="0.319"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Salarios" HorizontalAlignment="Left" VerticalAlignment="Top" Width="236" FontFamily="Cooper Black" FontSize="48" FontWeight="Bold" Foreground="White" Height="68" Margin="294,0,0,0"/>
        <Label Content="Miembro:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" FontFamily="Cooper Black" FontSize="20" FontWeight="Bold" Foreground="White" Height="40" Margin="87,82,0,0"/>
        <Label Content="Monto:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" FontFamily="Cooper Black" FontSize="20" FontWeight="Bold" Foreground="White" Height="40" Margin="87,127,0,0"/>
        <Label Content="Periodo:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" FontFamily="Cooper Black" FontSize="20" FontWeight="Bold" Foreground="White" Height="40" Margin="87,172,0,0"/>
        <Label Content="Fecha inicio:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="183" FontFamily="Cooper Black" FontSize="20" FontWeight="Bold" Foreground="White" Height="40" Margin="411,149,0,0"/>
        <Label Content="Deducciones:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="147" FontFamily="Cooper Black" FontSize="20" FontWeight="Bold" Foreground="White" Height="40" Margin="407,109,0,0"/>
        <ComboBox x:Name="boxperio" HorizontalAlignment="Left" Margin="210,179,0,0" VerticalAlignment="Top" Width="143" Height="28">
            <ComboBoxItem Content="SEMANAL"/>
            <ComboBoxItem Content="QUINCENAL"/>
            <ComboBoxItem Content="MENSUAL"/>
        </ComboBox>
        <DataGrid x:Name="dbsalarios" AutoGenerateColumns="False" Margin="68,293,70,30"
          IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
          CanUserReorderColumns="False" CanUserResizeColumns="True"
          CanUserResizeRows="False" CanUserSortColumns="True"
          SelectionMode="Single" SelectionUnit="FullRow"
          Background="#FFF8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"
          RowBackground="Transparent" AlternatingRowBackground="#F5F5F5"
          FontFamily="Segoe UI" FontSize="12" HeadersVisibility="All"
          GridLinesVisibility="None" RowHeight="35">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF0003F1"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,5"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="NOMBRE" Binding="{Binding nombre}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="MONTO" Binding="{Binding monto}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="PERIODICIDAD" Binding="{Binding periodicidad}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="DEDUCCIONES" Binding="{Binding deducciones}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="FECHA" Binding="{Binding fecha_inicio}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="txtmonto" HorizontalAlignment="Left" Margin="210,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <ComboBox x:Name="boxmiembro" 
            HorizontalAlignment="Left" 
            Margin="210,88,0,0" 
            VerticalAlignment="Top" 
            Width="143" 
            FontFamily="Arial Narrow" 
            FontSize="18"  
            ItemsSource="{Binding Miembros}"
            DisplayMemberPath="Nombre"
            SelectedValuePath="ID_Miembros" Height="28">
        </ComboBox>
        <TextBox x:Name="txtdeducciones" HorizontalAlignment="Left" Margin="559,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DatePicker HorizontalAlignment="Left" Margin="559,157,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnagregar" HorizontalAlignment="Left" Margin="97,227,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="176">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/anadir.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Agregar Salario" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnmodificar" HorizontalAlignment="Left" Margin="314,227,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="196">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/editar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Modificar Salario" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btneliminar" HorizontalAlignment="Left" Margin="539,227,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="165">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/borrar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Eliminar Salario" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
