<Window x:Class="ProyectoFundaBD.Vehiculo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFundaBD"
        mc:Ignorable="d"
        Title="Listas y Tareas" Height="750" Width="900"
        Closing="Window_Closing"
        ResizeMode="CanMinimize">
    <Grid x:Name="area">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1249*"/>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0003F1" Offset="0.361"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Mantenimiento Vehiculo" HorizontalAlignment="Left" Margin="144,27,0,0" VerticalAlignment="Top" Width="624" FontFamily="Cooper Black" FontSize="48" FontWeight="Bold" Foreground="White" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.324"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Vehiculo:" HorizontalAlignment="Left" Margin="137,116,0,0" VerticalAlignment="Top" Width="135" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White"/>
        <Label Content="Tipo:" HorizontalAlignment="Left" Margin="137,170,0,0" VerticalAlignment="Top" Width="98" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White"/>
        <Label Content="Concepto:" HorizontalAlignment="Left" Margin="137,228,0,0" VerticalAlignment="Top" Width="176" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White"/>
        <Label Content="Fecha:" HorizontalAlignment="Left" Margin="137,287,0,0" VerticalAlignment="Top" Width="159" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White"/>
        <Label Content="Costo:" HorizontalAlignment="Left" Margin="470,172,0,0" VerticalAlignment="Top" Width="159" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White"/>
        <Label Content="Taller:" HorizontalAlignment="Left" Margin="463,226,0,0" VerticalAlignment="Top" Width="139" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White"/>
        <Label Content="Notas:" HorizontalAlignment="Left" Margin="470,284,0,0" VerticalAlignment="Top" Width="139" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White"/>
        <Label Content="Kilometraje" HorizontalAlignment="Left" Margin="470,117,0,0" VerticalAlignment="Top" Width="159" FontFamily="Cooper Black" FontSize="24" FontWeight="Bold" Foreground="White"/>
        <ComboBox x:Name="boxvehiculo" 
            HorizontalAlignment="Left" 
            Margin="272,128,0,0" 
            VerticalAlignment="Top" 
            Width="142" 
            FontFamily="Arial Narrow" 
            FontSize="18"  
            ItemsSource="{Binding Vehicu}"
            DisplayMemberPath="Placa"
            SelectedValuePath="ID_vehiculo" Height="26">
        </ComboBox>
        <TextBox x:Name="txtconcepto" HorizontalAlignment="Left" Margin="272,243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"/>
        <DatePicker x:Name="fecha" HorizontalAlignment="Left" Margin="272,291,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dbmante" AutoGenerateColumns="False" Margin="153,431,118,57"
          IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
          CanUserReorderColumns="False" CanUserResizeColumns="True"
          CanUserResizeRows="False" CanUserSortColumns="True"
          SelectionMode="Single" SelectionUnit="FullRow"
          Background="#FFF8F9FA" BorderBrush="#E0E0E0" BorderThickness="1"
          RowBackground="Transparent" AlternatingRowBackground="#F5F5F5"
          FontFamily="Segoe UI" FontSize="12" HeadersVisibility="All"
          GridLinesVisibility="None" RowHeight="35">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF0003F1"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,5"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="PLACA" Binding="{Binding placa}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="TIPO" Binding="{Binding tipo}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="CONCEPTO" Binding="{Binding concepto}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="FECHA" Binding="{Binding fecha}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="KILOMETRAJE" Binding="{Binding kilometraje}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="COSTO" Binding="{Binding costo}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="TALLER" Binding="{Binding taller}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="NOTAS" Binding="{Binding notas}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,5,8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox x:Name="boxtipo" HorizontalAlignment="Left" Margin="272,181,0,0" VerticalAlignment="Top" Width="142" Height="26">
            <ComboBoxItem Content="PREVENTIVO"/>
            <ComboBoxItem Content="CORRECTIVO"/>
            <ComboBoxItem Content="OTRO"/>
        </ComboBox>
        <TextBox x:Name="txtkilometraje" HorizontalAlignment="Left" Margin="634,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtcosto" HorizontalAlignment="Left" Margin="634,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtcosto_Copiar" HorizontalAlignment="Left" Margin="634,243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtnotas" HorizontalAlignment="Left" Margin="634,303,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnagregar" HorizontalAlignment="Left" Margin="139,355,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="176">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/anadir.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Agregar Salario" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnmodificar" HorizontalAlignment="Left" Margin="356,355,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="196">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/editar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Modificar Salario" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="btneliminar" HorizontalAlignment="Left" Margin="591,355,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="50" Width="165">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Imagenes/borrar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Eliminar Salario" VerticalAlignment="Center" FontFamily="Arial Black" Foreground="White"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
